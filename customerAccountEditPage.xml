<apex:page id="customerAccountEditPage" standardController="Account"
           extensions="CustomerAccountEditController" tabStyle="Account"
           showHeader="{!NOT(mIsModalWindow)}" sidebar="{!NOT(mIsModalWindow)}"
           title="{!$Label.fscore__edit_customer_account_title}" applyHtmlTag="true" docType="html-5.0" >

    <head>
        <apex:slds />
        <apex:stylesheet value="{!URLFOR($Resource.fs_style, 'fs-style.css')}"/>
        <script src="{!URLFOR($Resource.fs_svg, 'svg4everybody.js')}"></script>
        <script>svg4everybody();</script>
        <meta http-equiv="x-ua-compatible" content="ie=edge"/>
        <apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" />
        <script>var $j = jQuery.noConflict();</script>
    </head>   

    <body>   
        <div class="slds-scope">
            <apex:form id="accountEditForm" styleClass="{!IF(mIsModalWindow,'slds-p-horizontal--xx-small','')} slds-form--horizontal fs-data-form slds-m-bottom--large">

                <div id="modal-sticky-anchor"></div>
                <div id="modal-sticky-header">
                    <div class="slds-page-header slds-m-bottom--small" role="banner">
                        <div class="slds-grid slds-grid--align-spread">
                            <div class="slds-col" align="left">
                                <div class="slds-media">
                                    <div class="slds-media__figure">
                                       <c:svgIcon iconStyleClass="slds-icon {!IF(mIsModalWindow,'slds-icon--medium','slds-icon--large')} slds-icon-standard-account"
                                                  iconPath="{!URLFOR($Asset.SLDS, 'assets/icons/standard-sprite/svg/symbols.svg#account')}"/>
                                    </div>
                                    <div class="slds-media__body slds-align-middle">
                                        <p class="slds-text-heading--label">{!$ObjectType.Account.Label}</p>
                                        <h1 class="slds-page-header__title slds-m-right--small slds-truncate slds-align-middle">
                                            {!IF(ISBLANK(mCustomerAccount.Id), $Label.fscore__new_customer_account_title, mCustomerAccount.Name)}
                                        </h1>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="slds-col slds-no-flex slds-align-middle">
                                <apex:commandButton value="{!$Label.fscore__save_button}" 
                                                    title="{!$Label.fscore__save_button_tooltip}"
                                                    styleClass="slds-button slds-button--brand"
                                                    action="{!onSave}" 
                                                    status="saveRecordStatus"
                                                    reRender="messagePanel,accountInfoPanel"
                                                    oncomplete="{!mJavascriptMethod}({!mIsModalWindow}, {!mIsError});"/>
                                                    
                                <apex:commandButton immediate="true" action="{!cancel}"
                                                    value="{!$Label.fscore__cancel_button}" 
                                                    title="{!$Label.fscore__cancel_button_tooltip}"
                                                    styleClass="slds-button slds-button--neutral"
                                                    onclick="closeModalFromModalWindow('cancel',false,{!mIsModalWindow},'');"/>
                            </div>
                        </div>
                    </div>
                </div>

                <apex:actionStatus id="saveRecordStatus">
                    <apex:facet name="start">
                        <c:fsSpinner spinnerSize="medium"/>
                    </apex:facet>
                </apex:actionStatus>

                <apex:outputPanel id="messagePanel" styleClass="fs-message-panel">
                    <apex:pagemessages />
                </apex:outputPanel>          

                <div class="slds-m-top_small">
                    <div class="{!IF(mIsModalWindow,'', 'slds-box slds-box_x-small')} slds-container_fluid">
                        <apex:pageBlock id="accountPageBlock" mode="mainDetail"  html-class="fs-data-block">
                            <apex:outputPanel id="accountInfoPanel">

                                <span id="iCustomerAccountId" class="slds-hide">{!mCustomerAccount.Id}</span>
                                <span id="iCustomerRecordKey" class="slds-hide">{!mCustomerRecordKey}</span>
                                
                                <c:sectionHeader label="{!$Label.fscore__information_block_title}"
                                                 isEditSectionHeader="true" isModalWindow="true"/>
                                
                                <div id="accountInfoSection" class="slds-grid slds-wrap slds-m-horizontal_small">
                                    <div class="slds-p-horizontal_x-small slds-p-bottom_small slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2 slds-truncate">
                                        <p class="slds-text-body_small slds-text-color_weak slds-p-bottom_xx-small">
                                            <span class="slds-truncate">{!$ObjectType.Account.Fields.Name.Label}</span>
                                            <apex:outputPanel styleClass="fs-required slds-m-left_xx-small">*</apex:outputPanel>
                                        </p>
                                        <apex:inputField value="{!mCustomerAccount.Name}" required="false"/>                                                
                                    </div>

                                    <apex:repeat value="{!$ObjectType.Account.FieldSets.Customer_Info_Edit_Fields}"
                                                   var="accountInfo">
	                                    <div class="slds-p-horizontal_x-small slds-p-bottom_small slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2 slds-truncate">
	                                        <p class="slds-text-body_small slds-text-color_weak slds-p-bottom_xx-small">
	                                            <span class="slds-truncate">{!accountInfo.Label}</span>
	                                            <apex:outputPanel rendered="{!OR(accountInfo.required, accountInfo.dbrequired)}"
	                                                              styleClass="fs-required slds-m-left_xx-small">*</apex:outputPanel>
	                                        </p>
                                            <apex:inputField value="{!mCustomerAccount[accountInfo.fieldPath]}" required="false"/>                                                
	                                    </div>
                                    </apex:repeat>
                                </div>
                                
                                <apex:outputPanel id="billingAddressInfoPanel" rendered="{!($ObjectType.Account.FieldSets.Billing_Address_Fields.size > 0)}">
                                    <div class="slds-m-top_small">
                                        <c:sectionHeader label="{!$ObjectType.Account.Fields.BillingAddress.Label}"
                                                         isEditSectionHeader="true" isModalWindow="true"/>
                                    </div>
                                    
	                                <div id="billingAddressSection" class="slds-grid slds-wrap slds-m-horizontal_small">
	                                    <apex:repeat value="{!$ObjectType.Account.FieldSets.Billing_Address_Fields}"
                                                       var="billingAddressInfo">
                                            <div class="slds-p-horizontal_x-small slds-p-bottom_small slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2 slds-truncate">
		                                        <p class="slds-text-body_small slds-text-color_weak slds-p-bottom_xx-small">
		                                            <span class="slds-truncate">{!billingAddressInfo.Label}</span>
		                                            <apex:outputPanel rendered="{!OR(billingAddressInfo.required, billingAddressInfo.dbrequired)}"
		                                                              styleClass="fs-required slds-m-left_xx-small">*</apex:outputPanel>
		                                        </p>
	                                            <apex:inputField value="{!mCustomerAccount[billingAddressInfo.fieldPath]}" required="false"/>                                                
		                                    </div>
	                                    </apex:repeat>
	                                </div>
                                </apex:outputPanel>
                                
                                <apex:outputPanel id="shippingAddressInfoPanel" rendered="{!($ObjectType.Account.FieldSets.Shipping_Address_Fields.size > 0)}">
                                    <div class="slds-m-top_small">
                                        <c:sectionHeader label="{!$ObjectType.Account.Fields.ShippingAddress.Label}"
                                                         isEditSectionHeader="true" isModalWindow="true"/>
                                    </div>
                                    
	                                <div id="shippingAddressSection" class="slds-grid slds-wrap slds-m-horizontal_small">
	                                    <apex:repeat value="{!$ObjectType.Account.FieldSets.Shipping_Address_Fields}"
                                                       var="shippingAddressInfo">
                                            <div class="slds-p-horizontal_x-small slds-p-bottom_small slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2 slds-truncate">
		                                        <p class="slds-text-body_small slds-text-color_weak slds-p-bottom_xx-small">
		                                            <span class="slds-truncate">{!shippingAddressInfo.Label}</span>
		                                            <apex:outputPanel rendered="{!OR(shippingAddressInfo.required, shippingAddressInfo.dbrequired)}"
		                                                              styleClass="fs-required slds-m-left_xx-small">*</apex:outputPanel>
		                                        </p>
	                                            <apex:inputField value="{!mCustomerAccount[shippingAddressInfo.fieldPath]}" required="false"/>                                                
		                                    </div>
	                                    </apex:repeat>
	                                </div>
                                </apex:outputPanel>
                                
                            </apex:outputPanel>
                        </apex:pageBlock>
                    </div>
                </div>
            </apex:form>
            <div class="{!IF(mIsModalWindow,'slds-hide','')}">
                <c:fsCopyright pageTitle="{!IF(ISBLANK(mCustomerAccount.Id), $Label.fscore__new_customer_account_title, mCustomerAccount.Name)}"/>
            </div>
        </div>

        <script src="{!$Resource.fs_modal_window_close_js}"/>
        <script src="{!URLFOR($Resource.fs_modal_sticky_header, 'fs_modal_sticky_header.js')}"/>
        <script>
            /*
             * SSingh : Do Not rename the following method names
             */
            function setAccountDetails(isModalWindow, isError){
                console.log('setting account details...');
                closeModalFromModalWindow('save', isError, isModalWindow, 'reloadCustomerAccounts');
            }

            function setNewAccountDetails(isModalWindow, isError){
                if (isModalWindow){
                    if (!isError){
                        console.log('adding new account...');
                        var newAccountId = $j("span[id$=iCustomerAccountId]").text();
                        var customerRecordKey = $j("span[id$=iCustomerRecordKey]").text();
                        console.log('New Account Id : ' + newAccountId);
                        console.log('Customer Record key : ' + customerRecordKey);
                        window.parent.parent.addNewCustomerAccount(newAccountId, customerRecordKey);
                        window.parent.parent.closeModal('save');
                    }
                }
            }
        </script>
    </body>
</apex:page>
