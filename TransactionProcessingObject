public class TransactionProcessingObject {

    public TransactionProcessingObject() {
        mErrorStack             = new List<String>();
        mProcessingResultStack  = new List<String>();
        mIsBackdatedTransaction = false;
        mIsRepostingTransaction = false;
        mIsDependentTransaction = false;
        mIsProcessingSuspended  = false;
        mIsTransactionPosting   = true;
    }
    
    // PROCESSING INPUT
    public  Transaction_Processing_Queue__c            mTransactionQueueRecord     {get; set;}
    public  List<Transaction_Processing_Parameter__c>  mTransactionParameterList   {get; set;}
    public  Contract_Transaction__c                    mReverseTransactionRecord   {get; set;}
    public  String                                     mReverseReason              {get; set;}
    public  String                                     mOperationTypeBeforeReverse {get; set;}
    public  Id                                         mProcessingUserId           {get; set;}
    public  Id                                         mProcessingUserProfileId    {get; set;}
    public  Boolean                                    mIsTransactionPosting       {get; set;} //adagur to skip Txn Posting and simply perform action.
    /*
     * FOLLOWING ATTRIBUTES ARE FOR INTERNAL USE AND MUST NOT BE SET BY THE CALLER.
     * THEY ARE ALWAYS OVERWRITTEN WITH SYSTEM GENERATED VALUES
     */
    public  Contract_Transaction__c                    mNewTransactionRecord       {get; set;}
    public  Id                                         mRelatedTransactionId       {get; set;}
    public  Id                                         mLendingContractId          {get; set;}
    public  String                                     mLendingContractNumber      {get; set;}  
    public  Id                                         mTransactionId              {get; set;}
    public  Date                                       mTransactionDate            {get; set;}
    public  Id                                         mTransactionSetupId         {get; set;}
    public  Id                                         mReverseTransactionSetupId  {get; set;}
    public  Date                                       mSystemDate                 {get; set;}
    public  Date                                       mBusinessDate               {get; set;}
    public  Boolean                                    mIsBackdatedTransaction     {get; set;} 
    public  Boolean                                    mIsRepostingTransaction     {get; set;}
    public  Boolean                                    mIsDependentTransaction     {get; set;}
    public  Boolean                                    mIsProcessingSuspended      {get; set;}
    public  String                                     mProcessSuspendAction       {get; set;}
    public  String                                     mProcessSuspendEntityName   {get; set;}
    public  String                                     mProcessSuspendEntityValue  {get; set;}
    public  String                                     mProcessParentTransactionAs {get; set;}
    //public  Id                                       mContractFeeId              {get; set;}
    //public  Id                                       mSetupFeeId                 {get; set;}

    // PROCESSING/SUCCESS MESSAGE(S) POPULATED DURING PROCESSING
    public  List<String>                               mProcessingResultStack      {get; set;}

    // VALIDATIONS RELATED
    public  Boolean                                    mIsPrescreenSuccess         {get; set;}
    public  Boolean                                    mIsSuccess                  {get; set;}
    public  List<String>                               mErrorStack                 {get; set;}

    /*
     * THE BELOW ATTRIBUTE IS FOR PREVIEW ONLY USE AND MUST NOT BE SET BY THE CALLER.
     * THEY WILL ONLY BE SET WHEN mIsPreview is true
     */
    public  TransactionProcessingDataObject            mTransactionProcessingResultDataObject {get; set;}
    
}
