<apex:page id="decisionStipulationEditPage" standardController="Lending_Application_Decision_Stipulation__c"
           extensions="DecisionStipulationEditController" tabStyle="Lending_Application_Decision_Stipulation__c"
           showHeader="true" sidebar="true" applyHtmlTag="true" docType="html-5.0"
           title="{!$Label.fscore__edit_decision_stipulation_title}">

    <head>
        <apex:slds />
        <apex:stylesheet value="{!URLFOR($Resource.fs_style, 'fs-style.css')}"/>
        <script src="{!URLFOR($Resource.fs_svg, 'svg4everybody.js')}"></script>
        <script>svg4everybody();</script>
        <meta http-equiv="x-ua-compatible" content="ie=edge"/>
        <apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"/>
        <script>var $j = jQuery.noConflict();</script>
    </head>   

    <body>   
        <div class="slds-scope">
            <apex:form id="stipulationEditForm" styleClass="slds-form_horizontal fs-data-form slds-m-horizontal_x-small slds-m-bottom_large">

                <div id="page-sticky-anchor"></div>
                <div id="page-sticky-header">
                    <div class="slds-page-header slds-m-bottom--small" role="banner">
                        <div class="slds-grid slds-grid--align-spread">
                            <div class="slds-col" align="left">
                                <div class="slds-media">
                                    <div class="slds-media__figure">
                                       <c:svgIcon iconStyleClass="slds-icon slds-icon--large slds-icon-standard-apps"
                                                  iconPath="{!URLFOR($Asset.SLDS, 'assets/icons/custom-sprite/svg/symbols.svg#custom18')}"/>
                                    </div>
                                    <div class="slds-media__body slds-align-middle">
                                        <p class="slds-text-heading--label">{!mApplication.Name}</p>
                                        <h1 class="slds-page-header__title slds-m-right--small slds-truncate slds-align-middle">
                                            {!IF(ISBLANK(mStipulation.Id), $Label.fscore__new_decision_stipulation_title, ($ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Name.Label + mStipulation.Name))}
                                        </h1>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="slds-col slds-no-flex slds-align-middle">
                                <apex:commandButton value="{!$Label.fscore__save_button}" 
                                                    title="{!$Label.fscore__save_button_tooltip}"
                                                    styleClass="slds-button slds-button--brand"
                                                    action="{!onSave}" 
                                                    status="waitStatus"
                                                    reRender="messagePanel,stipulationBlockPanel"/>
                                                    
                                <apex:commandButton immediate="true" action="{!cancel}"
                                                    value="{!$Label.fscore__cancel_button}" 
                                                    title="{!$Label.fscore__cancel_button_tooltip}"
                                                    styleClass="slds-button slds-button--neutral"/>
                            </div>
                        </div>
                    </div>
                </div>
                    
                <apex:actionStatus id="waitStatus">
                    <apex:facet name="start">
                        <c:fsSpinner spinnerSize="medium"/>
                    </apex:facet>
                </apex:actionStatus>

                <apex:outputPanel id="messagePanel" styleClass="fs-message-panel">
                    <apex:pagemessages />
                </apex:outputPanel>          

                <div class="slds-m-top--small">
                    <div class="slds-box slds-box--x-small slds-container--fluid">
                        <apex:outputPanel id="stipulationBlockPanel">
                            <apex:pageBlock id="stipulationBlock" mode="mainDetail" html-class="fs-data-block">
                                
                                <apex:outputPanel id="stipulationInfoPanel">
                                    <c:sectionHeader label="{!$Label.fscore__information_block_title}"
                                                     isEditSectionHeader="true" isModalWindow="true"/>
                                    
                                    <apex:pageBlockSection id="stipulationInfoSection" columns="2" collapsible="false" html-class="slds-theme--default">
             
                                        <apex:pageBlockSectionItem helpText="{!$ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Stipulation_Name__c.inlineHelpText}">
                                            <apex:outputLabel value="{!$ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Stipulation_Name__c.Label}">
                                                <apex:outputPanel styleClass="fs-required slds-m-left--xxx-small">*</apex:outputPanel>
                                            </apex:outputLabel>
                                            
                                            <apex:selectList value="{!mStipulation.Stipulation_Name__c}"
                                                             multiselect="false" size="1">
                                                <apex:selectOptions value="{!mStipulationSelectList}"/>
                                            </apex:selectList>
                                        </apex:pageBlockSectionItem>

                                        <apex:pageBlockSectionItem helpText="{!$ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Lending_Application_Number__c.inlineHelpText}">
                                            <apex:outputLabel value="{!$ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Lending_Application_Number__c.Label}">
                                                <apex:outputPanel rendered="{!NOT(mHasParentApplication)}" styleClass="fs-required slds-m-left--xxx-small">*</apex:outputPanel>
                                            </apex:outputLabel>
                                            
                                            <apex:outputPanel >
                                                <apex:inputField value="{!mStipulation.Lending_Application_Number__c}" 
                                                                 required="false" rendered="{!NOT(mHasParentApplication)}">
                                                    <apex:actionSupport action="{!onSelectApplication}" event="onchange"
                                                                        reRender="stipulationEditForm" status="waitStatus"/>
                                                </apex:inputField>
                                                
                                                <apex:outputField value="{!mStipulation.Lending_Application_Number__c}" 
                                                                  rendered="{!mHasParentApplication}"/>
                                            </apex:outputPanel>
                                        </apex:pageBlockSectionItem>
                                                          
                                        <apex:inputField value="{!mStipulation.Comments__c}"/>

                                        <apex:pageBlockSectionItem helpText="{!$ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Decision_Reference_Number__c.inlineHelpText}">
                                            <apex:outputLabel value="{!$ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Decision_Reference_Number__c.Label}">
                                                <apex:outputPanel styleClass="fs-required slds-m-left--xxx-small">*</apex:outputPanel>
                                            </apex:outputLabel>
                                            
                                            <apex:inputField value="{!mStipulation.Decision_Reference_Number__c}" required="false"/>
                                        </apex:pageBlockSectionItem>
                                        
                                        <apex:inputField value="{!mStipulation.Is_Fulfilled__c}" />
                                        <apex:pageBlockSectionItem /> <!-- Blank Space -->
                                        <apex:inputField value="{!mStipulation.Fulfilled_By__c}" />
                                        <apex:inputField value="{!mStipulation.Fulfilled_On__c}" />
                                        
                                    </apex:pageBlockSection>
                                </apex:outputPanel>                            
    
                            </apex:pageBlock>
                        </apex:outputPanel>
                    </div>
                </div>
            </apex:form>
        </div>
        <c:fsCopyright pageTitle="{!IF(ISBLANK(mStipulation.Id), $Label.fscore__new_decision_stipulation_title, ($ObjectType.Lending_Application_Decision_Stipulation__c.Fields.Name.Label + mStipulation.Name))}"/>
        <script src="{!URLFOR($Resource.fs_sticky_header, 'fs_sticky_header.js')}"/>
    </body>
</apex:page>
